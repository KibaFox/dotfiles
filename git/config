[color]
	ui = auto

[core]
	excludesfile = ~/.config/git/ignore_global

[push]
	default = simple

# Allow local customizations
[include]
	path = ~/.config/git/config_local

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[difftool "vimdiff"]
	path = nvim

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	path = nvim

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# vi:syntax=gitconfig
