root = true

[*]
charset = utf-8
indent_size = 8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[.install.conf.yaml]
indent_size = 4

[vimrc]
indent_size = 2
indent_style = space
